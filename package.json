{
	"name": "convert-markdown-to-html",
	"displayName": "Extensible Markdown Converter",
	"description": "Converts Markdown to HTML and saves in files, can be extended by any of the markdown-it plug-ins",
	"version": "2.1.0",
	"publisher": "sakryukov",
	"repository": {
		"type": "git",
		"url": "https://github.com/SAKryukov/vscode-markdown-to-html.git"
	},
	"engines": {
		"vscode": "^1.13.1"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"markdown"
	],
	"activationEvents": [
		"onCommand:extension.markdown.ShowPreview",
		"onCommand:extension.markdown.ShowPreviewToSide",
		"onCommand:extension.Markdown.ConvertToHtml",
		"onCommand:extension.Markdown.ConvertToHtml.All"
	],
	"main": "./out/main.js",
	"contributes": {		
		"commands": [
			{
				"command": "extension.markdown.ShowPreview",
				"title": "Markdown: Open &Preview"
			},
			{
				"command": "extension.markdown.ShowPreviewToSide",
				"title": "Markdown: Open Preview to the &Side"
			},
			{
				"command": "extension.Markdown.ConvertToHtml",
				"title": "Markdown: Convert to &HTML"
			},
			{
				"command": "extension.Markdown.ConvertToHtml.All",
				"title": "Markdown: Convert to HTML all .md files in &Workspace"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "editorTextFocus && resourceLangId == markdown",
					"command": "extension.markdown.ShowPreview",
					"group": "markdownPreview"
				},
				{
					"when": "editorTextFocus && resourceLangId == markdown",
					"command": "extension.markdown.ShowPreviewToSide",
					"group": "markdownPreview"
				},
				{
					"when": "editorTextFocus && resourceLangId == markdown",
					"command": "extension.Markdown.ConvertToHtml",
					"group": "markdown"
				},
				{
					"when": "editorTextFocus",
					"command": "extension.Markdown.ConvertToHtml.All",
					"group": "markdown"
				}
			],
			"explorer/context": [
				{
					"command": "extension.Markdown.ConvertToHtml.All",
					"group": "markdown"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "Markdown convert to HTML configuration",
			"properties": {
				"markdown.extension.convertToHtml.reportSuccess": {
					"type": "boolean",
					"default": true
				},
				"markdown.extension.convertToHtml.showHtmlInBrowser": {
					"type": "boolean",
					"default": false
				},
				"markdown.extension.convertToHtml.embedCss": {
					"type": "boolean",
					"default": false
				},
				"markdown.extension.convertToHtml.titleLocatorRegex": {
					"type": "string",
					"default": "^(.*?)\\[\\]\\(title\\)"
				},
				"markdown.extension.convertToHtml.options.headingId": {
					"type": "boolean",
					"default": true
				},
				"markdown.extension.convertToHtml.options.allowHTML": {
					"type": "boolean",
					"default": true
				},
				"markdown.extension.convertToHtml.options.linkify": {
					"type": "boolean",
					"default": false
				},
				"markdown.extension.convertToHtml.options.br": {
					"type": "boolean",
					"default": true
				},
				"markdown.extension.convertToHtml.options.typographer": {
					"type": "boolean",
					"default": true
				},
				"markdown.extension.convertToHtml.options.smartQuotes": {
					"type": "string",
					"default": "“”‘’"
				},
				"markdown.extension.convertToHtml.options.additionalPlugins": {
					"type": "object",
					"default": {
						"absolutePath": "",
						"relativePath": "",
						"plugins": [
							{
								"name": "",
								"enable": true,
								"options": {}
							}
						]
					}
				}
			}
		},
		"configurationDefaults": {
			"[markdown]": {
				"editor.codeLens": true,
				"editor.folding": false,
				"editor.lineNumbers": "off",
				"editor.wordWrap": "on"
			}
		}
	},
	"dependencies": {
		"vscode": "^1.13.1"
	},
	"devDependencies": {
		"vscode": "^1.13.1"
	},
	"extensionDependencies": [
		"Microsoft.vscode-markdown"
	],
	"__metadata": {
		"id": "2274c865-8de3-4905-b3ee-661afa12b4c5",
		"publisherId": "d1ee7a62-4a9b-4f51-94ff-cb9d0dc5a6c9",
		"publisherDisplayName": "Sergey A Kryukov"
	}
}